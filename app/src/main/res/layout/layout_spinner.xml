<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <Spinner
        android:id="@+id/spinner_pois"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/image_button_detalle_poi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/boton_detalle_poi"
        app:srcCompat="@drawable/ic_description_black_24dp"
        android:layout_toEndOf="@id/spinner_pois"
        android:visibility="invisible"/>

    <Spinner
        android:id="@+id/spinner_percorridos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/image_button_detalle_percorrido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/boton_detalle_percorrido"
        app:srcCompat="@drawable/ic_description_black_24dp"
        android:layout_toEndOf="@id/spinner_percorridos"
        android:visibility="invisible"/>

</RelativeLayout>