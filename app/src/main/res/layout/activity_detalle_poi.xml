<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="gal.caronte.caronte.activity.DetallePoiActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarPoi"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        app:theme="@style/ToolBar" />

    <TextView
        android:id="@+id/textViewNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbarPoi"
        android:text="@string/textview_nome"
        android:textColor="@color/colorAccent"
        tools:text="@string/textview_nome" />

    <EditText
        android:id="@+id/editTextNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewNome"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimary"
        tools:text="@string/edicion_nome" />

    <TextView
        android:id="@+id/textViewDescricion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextNome"
        android:text="@string/textview_descricion"
        android:textColor="@color/colorAccent"
        tools:text="@string/textview_descricion" />

    <EditText
        android:id="@+id/editTextDescricion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewDescricion"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimary"
        tools:text="@string/edicion_descricion" />

    <TextView
        android:id="@+id/textViewTempoAprox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextDescricion"
        android:textColor="@color/colorAccent"
        android:text="@string/textview_tempo_aproximado" />

    <EditText
        android:id="@+id/editTextTempoAprox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewTempoAprox"
        android:ems="10"
        android:textColor="@color/colorPrimary"
        android:inputType="number" />

    <Button
        android:id="@+id/buttonSubirImaxe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/buttonVerImaxe"
        android:text="@string/subir_imaxe"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/buttonVerImaxe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/buttonEliminar"
        android:text="@string/ver_imaxe"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/buttonEliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/buttonGardar"
        android:text="@string/boton_eliminar"
        android:textColor="@color/colorPrimary"
        tools:text="@string/boton_eliminar" />

    <Button
        android:id="@+id/buttonGardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="@string/boton_gardar"
        android:textColor="@color/colorPrimary"
        tools:text="@string/boton_gardar" />

</RelativeLayout>